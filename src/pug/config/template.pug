block config
	include vars
	include mixins/mixins
doctype html
html(lang='en' prefix='og: http://ogp.me/ns#', class='no-js')
	include utilis/bodyElements/IEtags
	head
		include utilis/head/metatags
		include utilis/head/metaTagsPWA
		include utilis/head/HTML5Shiv
		//include utilis/head/openGraph
		//include utilis/head/twetterCard
		include utilis/head/cdnFonts
		include utilis/head/cdnStyles
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css')
		link(rel="stylesheet" href="assets/css/styles.css")
		<link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet">
		title= currentPage.slice(0,1).toUpperCase() + currentPage.slice(1) + " | " + siteName
	body(class=currentPage, itemscope itemtype="http://schema.org/WebPage")
		include utilis/bodyElements/upBrowser
		//here start the Main Header
		header(class='main-header')
			include ../components/top-nav
			block main-header
		//here ends the Main Header
		//here start the Main Container
		main(class='main-container')
			include ../components/middleNav
			block main-container
		//here ends the Main Container
		//here start the Main Footer
		footer(class='main-footer')
			include ../components/footer
			include ../components/bottom-nav
			block main-footer
		//here ends the Main Footer
		include utilis/bodyElements/cdnLibraries
		script(src="assets/js/scripts-min.js")
		block scripts
